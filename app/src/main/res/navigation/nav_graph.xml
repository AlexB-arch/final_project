<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.afinal.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/goTo_receiptScanner"
            app:destination="@id/receiptScanner" />
    </fragment>

    <activity
        android:id="@+id/login"
        android:name="com.example.afinal.Login"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />

    <activity
        android:id="@+id/receiptScanner"
        android:name="com.example.afinal.ReceiptScanner"
        android:label="activity_receipt_scanner"
        tools:layout="@layout/activity_receipt_scanner" />

    <activity
        android:id="@+id/register"
        android:name="com.example.afinal.Register"
        android:label="activity_register"
        tools:layout="@layout/activity_register" />
</navigation>